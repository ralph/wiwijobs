<p>Pflichtfelder sind mit Sternchen (*) markiert.</p>
<% fields_for :job_link do |f| %>
<p>
	<strong><%= f.label :title, "Titel*" %></strong><br />
	<%= f.text_field :title %>
</p>

<p>
	<strong><%= f.label :description, "Beschreibungstext" %></strong><br />
	<%= f.text_area :description %>
</p>
<%= render :partial => "auxiliary/textile_help_links", :object => @job_link %>

<p>
	<strong><%= f.label :target, "Ziel*" %></strong><br />
	<%= f.text_field :target %>
</p>

<p>
	<%= submit_tag "Abschicken" %> oder <%= link_to 'Abbrechen', job_links_path %>
</p>
<% end %>