<h1>Editing right</h1>

<%= error_messages_for :right %>

<% form_for(:right, :url => right_path(@right), :html => { :method => :put }) do |f| %>
  <p>
    <b>Name</b><br />
    <%= f.text_field :name %>
  </p>

  <p>
    <b>Controller</b><br />
    <%= f.text_field :controller %>
  </p>

  <p>
    <b>Action</b><br />
    <%= f.text_field :action %>
  </p>

  <p>
    <%= submit_tag "Update" %>
  </p>
<% end %>

<%= link_to 'Show', right_path(@right) %> |
<%= link_to 'Back', rights_path %>