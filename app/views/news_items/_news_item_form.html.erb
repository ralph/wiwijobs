<% fields_for :news_item do |f| %>
<p>
	<b>Titel</b><br />
	<%= f.text_field :title %>
</p>

<p>
	<b>Text</b><br />
	<%= f.text_area :text %>
</p>

<p>
	<b>Veröffentlicht ab</b><br />
	<%= f.datetime_select :published_at %>
</p>

<p>
	<b>Veröffentlicht bis</b><br />
	<%= f.datetime_select :published_until %>
</p>

<p>
	<b>Kategorie</b><br />
	<%= f.collection_select :category_id, NewsCategory.find(:all), :id, :title %>
</p>

<p>
	<%= submit_tag "Abschicken" %> oder <%= link_to 'Abbrechen', news_items_path %>
</p>
<% end %>