<table id="students" class="content_table">
	<thead>
		<tr>
			<th>Name</th>
			<th>Vorname</th>
			<th>E-Mail</th>
			<th>Geburtstag</th>
			<th>&nbsp;</th>
		</tr>
	</thead>

	<tbody>
		<%- @users.each do |student| -%>
		<tr class="<%= cycle('odd', 'even') %>">
			<td><%= link_to student.last_name, user_path(student) %></td>
			<td><%= link_to student.first_name, user_path(student) %></td>
			<td><%= mail_to student.email, student.email, :encode => "hex"  %></td>
			<td><%= student.birthday %></td>
			<td><%= link_to "VCard", formatted_user_path(student, :vcf) %></td>
		</tr>
		<%- end -%>
	</tbody>
</table>