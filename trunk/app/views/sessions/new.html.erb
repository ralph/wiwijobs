<% form_tag session_path, { :id => "login_form" } do -%>
  <dl>
    <dt><label for="login">Benutzername:</label></dt>
    <dd><%= text_field_tag 'login', {}, :class => 'big' %></dd>
    <dt><label for="password">Passwort:</label></dt>
    <dd><%= password_field_tag 'password', {}, :class => 'big' %></dd>
    <!--<dd>
      <%= check_box_tag 'remember_me', {}, :id => "remember_me" %> 
      <label for="remember_me">Beim nächsten Besuch automatisch anmelden.</label>
    </dd>-->
  </dl>
  <p class="btns"><%= submit_tag 'Anmelden' %> <!-- oder <a href="#" id="reset_password_link" onclick="$('reset_password').show();$('login_form').hide()">Passwort zurücksetzen</a> --></p>
<% end -%>

<% form_tag reset_password_path, { :id => 'reset_password', :style => "display: none;" } do -%>
  <p>Bitte geben Sie Ihre E-Mail-Adresse ein. Sie müssen auf den Link in der E-Mail klicken, um das Passwort zurückzusetzen.</p>
  <p><%= text_field_tag :email, params[:email], :class => 'big' %></p>
  <p class="btns"><%= submit_tag 'Zurücksetzen' %> oder <a href="#" id="reset_password_cancel" onclick="$('reset_password').hide();$('login_form').show()">Abbrechen</a></p>
<% end -%>
