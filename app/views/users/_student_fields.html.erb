<% fields_for :user do |f| %>
<dl id="student_fields">
	<dt><%= f.label :first_name, "Vorname" %></dt>
	<dd><%= f.text_field :first_name %></dd>
	<dt><%= f.label :last_name, "Nachname" %></dt>
	<dd><%= f.text_field :last_name %></dd>
	<dt><%= f.label :home_street, "Heimat-Straße" %></dt>
	<dd><%= f.text_field :home_street %></dd>
	<dt><%= f.label :home_zip, "Heimat-PLZ" %></dt>
	<dd><%= f.text_field :home_zip %></dd>
	<dt><%= f.label :home_city, "Heimat-Stdt" %></dt>
	<dd><%= f.text_field :home_city %></dd>
	<dt><%= f.label :home_phone, "Heimat-Telefon" %></dt>
	<dd><%= f.text_field :home_phone %></dd>
	<dt><%= f.label :mobile, "Handy" %></dt>
	<dd><%= f.text_field :mobile %></dd>
	<dt><%= f.label :icq, "ICQ" %></dt>
	<dd><%= f.text_field :icq %></dd>
	<dt><%= f.label :birthday, "Geburtstag" %></dt>
	<dd><%= f.date_select :birthday, :start_year => 1975, :include_blank => true %></dd>
	<%- if current_user.has_right?("users", "update_all") -%>
	<dt><%= f.label :application_date, "Eintrittsdatum" %></dt>
	<dd><%= f.date_select :application_date %></dd>
	<%- end -%>
	<dt><%= f.label :key_fs, "Schlüsselnummer Fachschaft" %></dt>
	<dd><%= f.text_field :key_fs %></dd>
	<dt><%= f.label :key_wi, "Schlüsselnummer WI-AG" %></dt>
	<dd><%= f.text_field :key_wi %></dd>
	<dt><%= f.label :wi_ag_member, "WI-AG?" %></dt>
	<dd><%= f.check_box :wi_ag_member %></dd>
	<dt><%= f.label :study_course, "Studiengang" %></dt>
	<dd><%= f.select :study_course, [["BWL", "BWL"], ["VWL", "VWL"], ["WI", "WI"]] %></dd>
</dl>
<% end %>