<% fields_for :user do |f| %>
	<dd>
		<%= link_to_function("Passwort ändern...", "$$('.change_password').invoke('show'); this.hide();") %>
	</dd>
	<dt class="change_password"><%= f.label :password, "neues Passwort" %></dt>
	<dd class="change_password"><%= f.password_field :password %></dd>
	<dt class="change_password"><%= f.label :password_confirmation, "Passwort Bestätigung" %></dt>
	<dd class="change_password"><%= f.password_field :password_confirmation %></dd>
	<%= javascript_tag "$$('.change_password').invoke('hide');" %>
<% end %>
